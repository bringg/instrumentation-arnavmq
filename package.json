{
  "name": "instrumentation-arnavmq",
  "version": "1.1.0",
  "description": "OpenTelemetry automatic instrumentation for the `arnavmq` package",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . && prettier -c .",
    "format": "eslint . --fix && prettier --write .",
    "test": "dot-only-hunter test && nyc ts-mocha",
    "test:docker:run": "docker run -d --rm --name arnavmq-tests -p 5672:5672 rabbitmq:3.13-alpine"
  },
  "author": "Bring",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "./dist/src"
  ],
  "dependencies": {
    "@opentelemetry/instrumentation": "^0.206.0",
    "pkginfo": "^0.4.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.14.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.206.0",
    "@opentelemetry/sdk-metrics": "^2.0.1",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/sdk-trace-node": "^2.0.1",
    "@types/amqplib": "0.10.7",
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.6",
    "@types/pkginfo": "^0.4.3",
    "arnavmq": "^0.17.0",
    "chai": "^6.0.1",
    "dot-only-hunter": "^1.0.3",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^16.0.0",
    "mocha": "^10.3.0",
    "nyc": "^17.0.0",
    "prettier": "^3.2.5",
    "ts-mocha": "^11.1.0",
    "typescript": "^5.4.2",
    "typescript-eslint": "^8.14.0"
  },
  "peerDependencies": {
    "@opentelemetry/api": "^1.9.0"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
}
